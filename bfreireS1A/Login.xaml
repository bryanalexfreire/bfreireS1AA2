<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bfreireS1A.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"/>
            <Image Source="a.png" WidthRequest="100" HeightRequest="100"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Contraseña" IsPassword="True"/>
            <Button x:Name="btnIniciar" Text="Iniciar Sesión" Clicked="btnIniciar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>